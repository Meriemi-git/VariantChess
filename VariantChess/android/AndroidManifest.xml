<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.aboucorp.variantchess">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    <application
        android:allowBackup="false"
        android:appCategory="game"
        android:icon="@drawable/ic_chess_qlt45"
        android:isGame="true"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <uses-library android:name="android.test.runner" />
        <activity
            android:name="fr.aboucorp.variantchess.app.views.activities.MainActivity"
            android:configChanges="keyboard|keyboardHidden|navigation|orientation|screenSize|screenLayout"
            android:label="@string/app_name"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.aboucorp.variantchess.app.views.activities.BoardActivity"
            android:configChanges="keyboard|keyboardHidden|navigation|screenSize|screenLayout|orientation"
            android:screenOrientation="fullSensor" />
    </application>


</manifest>
