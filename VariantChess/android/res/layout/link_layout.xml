<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:text="@string/lbl_link_title"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/link_layout_mail_singup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/link_mail_message"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/link_txt_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:gravity="center"
            android:hint="@string/lbl_hint_email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/link_txt_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:gravity="center"
            android:hint="@string/lbl_hint_password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/link_btn_mail_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_connect"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/link_layout_google_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="40dp"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="@string/link_google_message"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/link_btn_signup_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/link_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/general_lbl_cancel" />

</LinearLayout>